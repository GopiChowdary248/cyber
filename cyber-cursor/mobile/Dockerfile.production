FROM node:18-alpine

# Set environment variables
ENV NODE_ENV=production
ENV EXPO_API_URL=http://localhost:8000/api/v1

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    curl \
    git \
    bash \
    nginx

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

