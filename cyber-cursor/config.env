# Cyber Cursor DAST Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cyber_cursor_dast

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Cyber Cursor DAST
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Debug Configuration
DEBUG=false
SQL_DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# WebSocket Configuration
WEBSOCKET_UPDATE_INTERVAL=1
WEBSOCKET_MAX_CONNECTIONS=100

# Scanner Configuration
SCANNER_TIMEOUT=300
SCANNER_MAX_CONCURRENT=5
SCANNER_RATE_LIMIT=10

# Crawler Configuration
CRAWLER_MAX_DEPTH=10
CRAWLER_MAX_PAGES=1000
CRAWLER_DELAY=1.0

# Proxy Configuration
PROXY_HOST=127.0.0.1
PROXY_PORT=8080
PROXY_SSL_ENABLED=false

# Intruder Configuration
INTRUDER_MAX_THREADS=10
INTRUDER_REQUEST_DELAY=0.1
INTRUDER_MAX_REQUESTS=10000

# Export Configuration
EXPORT_MAX_SIZE=100MB
EXPORT_TEMP_DIR=/tmp/cyber_cursor_exports

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_RETENTION_DAYS=30

# Audit Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Performance Configuration
CACHE_TTL=300
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
