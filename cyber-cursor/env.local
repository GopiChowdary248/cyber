# CyberShield Local Environment Configuration
# For local development with Docker containers

# Application Settings
APP_NAME=CyberShield
VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-in-production-make-it-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration - Use container hostname
DATABASE_URL=postgresql+asyncpg://cybershield_user:cybershield_password@postgres:5432/cybershield

# Redis Configuration - Use container hostname
REDIS_URL=redis://:redis_password@redis:6379/0

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://frontend:3000
ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Cloud Provider Credentials (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_FILE=/path/to/gcp-credentials.json

# Email Integration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Integration (Optional)
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Jira Integration (Optional)
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token

# Monitoring
PROMETHEUS_PORT=9090

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

