# Development Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://cybershield_user:cybershield_password@localhost:5432/cybershield
DATABASE_SYNC_URL=postgresql://cybershield_user:cybershield_password@localhost:5432/cybershield

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6380/0

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=CyberShield
VERSION=2.0.0

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# External Services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Email (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
