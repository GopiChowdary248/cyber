# Backend Production Environment Variables
# Security and Database Configuration

# Database Configuration
DB_HOST=postgres-local
DB_PORT=5432
DB_NAME=cybershield
DB_USER=cybershield_user
DB_PASSWORD=cybershield_password
DATABASE_URL=postgresql+asyncpg://cybershield_user:cybershield_password@postgres-local:5432/cybershield

# Redis Configuration
REDIS_HOST=redis-local
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Configuration
SECRET_KEY=your-super-secret-production-key-change-this-immediately
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]
ALLOWED_HOSTS=["localhost","127.0.0.1","yourdomain.com"]

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Configuration
APP_NAME=CyberShield
APP_VERSION=2.0.0
APP_ENVIRONMENT=production
DEBUG=false

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=CyberShield Security Platform
PROJECT_VERSION=2.0.0

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
